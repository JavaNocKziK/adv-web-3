{
    "compileOnSave": false,
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "e2e",
        "src",
        "tsc"
    ],
    "compilerOptions": {
        "outDir": "./tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "module": "commonjs",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ]
    }
}
